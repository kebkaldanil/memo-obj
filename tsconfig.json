{
  "compilerOptions": {
    "target": "es2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "lib": [
      "es2021"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "types": []
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "dist/",
    "node_modules/"
  ]
}